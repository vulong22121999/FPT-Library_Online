      //  AcquiredSource_Update = AcquiredSource;
        AcquiredSource_Update = $("#acquiredSource :selected").val();
        Note_Update = document.getElementById("txtNote2").value;

        var data = {
            holdingUpdate: {
                ID:ID_Update ,
                LibID:LibID_Update,
                Library:Library_Update,
                Location:Location_Update,
