    var LibID_Update;
    var LocID_Update;
    var Library_Update;
    var Location_Update;
    var Volume_Update;
    var CallNumber_Update;
    var CopyNumber_Update;
    var Shelf_Update;
    var Currency_Update;
    var RecordNumber_Update;
    var Price_Update;
    var RecordNumber_Update;
    var ReceiptedDate_Update;
    var AcquiredDate_Update;
    var AcquiredSource_Update;
    var Note_Update;



