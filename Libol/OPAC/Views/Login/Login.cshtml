
@{
    ViewBag.Title = "Đăng nhập vào thư viện";
    Layout = null;
}

<!DOCTYPE html>

<html>

<head>
    <meta name="viewport" content="width=device-width" />
    <title>Đăng nhập vào thư viện</title>
    <link href="~/AllContent/css/content.css" rel="stylesheet" type="text/css" />
    <link href="~/AllContent/images/favicon.ico" rel="icon" type="image/x-icon" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet"/>

    <style>
        input,
        select,
        textarea {
            max-width: 280px;
        }

        body {
            display: -ms-flexbox;
            display: flex;
            -ms-flex-align: center;
            align-items: center;
            padding-top: 9%;
            background-color: #f5f5f5;
        }

        .form-signin {
            width: 100%;
            max-width: 330px;
            padding: 15px;
            margin: auto;
        }

            .form-signin .checkbox {
                font-weight: 400;
            }

            .form-signin .form-control {
                position: relative;
                box-sizing: border-box;
                height: auto;
                padding: 10px;
                font-size: 16px;
            }

                .form-signin .form-control:focus {
                    z-index: 2;
                }

            .form-signin input[type="email"] {
                margin-bottom: -1px;
                border-bottom-right-radius: 0;
                border-bottom-left-radius: 0;
            }

            .form-signin input[type="password"] {
                margin-bottom: 10px;
                border-top-left-radius: 0;
                border-top-right-radius: 0;
            }
    </style>
    @Scripts.Render("~/bundles/jquery")
    <script src="https://apis.google.com/js/platform.js" async defer></script>
    <meta name="google-signin-client_id" content="">
   
</head>

<body>
    <div style="margin: auto">
        @using (Html.BeginForm("Login", "Login", FormMethod.Post, new { @class = "form-signin" }))
        {
            <a href="@Url.Action("Home", "Home")"><img class="mb-4" src="~/AllContent/images/Logo.png" alt="" width="232" height="63"></a>
            <h1 class="h3 mb-3 font-weight-normal">Vui lòng đăng nhập</h1>
            <input name="username" class="form-control" placeholder="Tên đăng nhập" required autofocus>
            <input type="password" name="password" class="form-control" placeholder="Mật khẩu" required>
            <h1 style="color: red;" class="h6 mb-3 font-weight-normal" id="Notification">@ViewData["Notification"]</h1>
            <h1 style="color: green;" class="h6 mb-3 font-weight-normal" id="ChangePassword">@TempData["ChangePassword"]</h1>
            <h1 style="color: red;" class="h6 mb-3 font-weight-normal" id="MailError">@TempData["MailError"]</h1>
            <h1 style="color: red;" class="h6 mb-3 font-weight-normal" id="MailError">@TempData["EmptyError"]</h1>
            <h1 style="color: red;" class="h6 mb-3 font-weight-normal" id="MailError">@TempData["ChangePasswordError"]</h1>
            <button class="btn btn-lg btn-primary btn-block" type="submit">Đăng nhập</button>
            <p style="text-align: right; position: relative; top: 10px">
                <a data-toggle="modal" href="#forgetPassword">Quên mật khẩu</a>
            </p>
        }
    </div>
    <!-- Change Password Modal -->
    <div class="modal fade" id="forgetPassword" role="dialog">
        <div class="modal-dialog">
            <!-- Modal content-->
            <form action="/Login/ForgetPassword" method="post">
                <div class="modal-content">
                    <div class="modal-header">
                        <h3 class="modal-title">Quên mật khẩu</h3>
                    </div>
                    <div class="modal-body">
                        <p>
                            Nhập số thẻ và email của bạn dưới đây, hệ thống sẽ tự động gửi mật khẩu mới đến mail của bạn.<br/>
                            Ví dụ dịnh dạng email: <b>anhNTSE01234@fpt.edu.vn</b>
                        </p>
                        <table style="margin: auto">
                            <tr>
                                <td style="padding: 10px"><b>Mã sinh viên:&nbsp;&nbsp;&nbsp;</b></td>
                                <td>
                                    <input class="form-control" type="text" name="studentCode" size="40" />
                                </td>
                            </tr>
                            <tr>
                                <td style="padding: 10px"><b>Email:&nbsp;&nbsp;&nbsp;</b></td>
                                <td>
                                    <input class="form-control" type="text" name="email" size="40" />
                                </td>
                            </tr>
                        </table>
                    </div>
                    <br />
                    <div style="margin: auto">
                        <button class="btn btn-info">Xác nhận</button>
                        <button type="button" class="btn btn-info" data-dismiss="modal">Đóng</button>
                    </div>
                    <br />
                </div>
            </form>
        </div>
    </div>
    <script src="~/AllContent/js/bootstrap.min.js"></script>
    <script src="~/AllContent/js/jquery-1.12.4.min.js"></script>
</body>
</html>
